@model BookMyMovieASP_MVC6.Models.Akbadmin;

<br />
<br />
<br />
<br />
<div class="container" style="padding-top:20px;">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div class="card-group">
                <div class="card p-4">
                    <div class="card-body">
                        <form method="post" asp-action="SignIn">
                            <h1 style="text-align:center; color:#e72929;">Admin Sign In</h1>
                            <div class="input-group mb-3">
                                <input type="text"  class="form-control sty1" placeholder="Email" asp-for="Email">
                            </div>
                            <span asp-validation-for="Email" class="validations" style="color:red; margin-bottom: 0.8rem;"></span>
                            <div class="input-group mb-4 mt-2">
                                <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                            </div>
                            <span asp-validation-for="Password" class="validations" style="color:red; style="margin-bottom: 0.8rem;"></span>
                            <div class="row">
                                <div class="col-6">
                                    @*<input type="submit" value="Update" />*@
                                    <button type="submit" value="SignIn" class="btn btn-success px-4">Login</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>     

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>